<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/list_item"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/img"
                android:adjustViewBounds="true"
                android:maxWidth="140dp"
                android:maxHeight="140dp"
                android:contentDescription="@string/item_image_viewinventory" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/productNameListLabel"
                    android:labelFor="@+id/productNameList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textColor="#C1F8B0B0"
                    android:text="@string/product_viewInventory"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/productNameList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/productNameListLabel"
                    android:layout_marginStart="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@drawable/cursor_color" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/productQuantityListLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:labelFor="@+id/productQuantityList"
                    android:maxLines="1"
                    android:text="@string/quantity_viewInventory"
                    android:textColor="#C1F8B0B0"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productQuantityList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/productQuantityListLabel"
                    android:layout_marginStart="2dp"
                    android:maxLines="1"
                    android:paddingStart="17dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="15dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@drawable/cursor_color" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/productUsageListLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:labelFor="@+id/productUsageList"
                    android:maxLines="1"
                    android:text="@string/usage_viewInventory"
                    android:textColor="#C1F8B0B0"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productUsageList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/productUsageListLabel"
                    android:maxLines="1"
                    android:paddingStart="17dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="15dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@drawable/cursor_color" />

                <TextView
                    android:id="@+id/productUsageTypeList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/productUsageList"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="15dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@drawable/cursor_color" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>