<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ViewItemDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/backbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/edit_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:adjustViewBounds="true"
                    android:maxWidth="300dp"
                    android:maxHeight="300dp"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="207dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/productNameDetailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productNameDetail"
                            android:maxLines="1"
                            android:text="@string/product_detail"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productNameDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_toEndOf="@+id/productNameDetailLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productManufactureDetailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productManufactureDetail"
                            android:maxLines="1"
                            android:text="@string/manufacture_detail"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productManufactureDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_toEndOf="@+id/productManufactureDetailLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPriceDetailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productPriceDetail"
                            android:maxLines="1"
                            android:text="@string/price_detail"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productPriceDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="72dp"
                            android:layout_toEndOf="@+id/productPriceDetailLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productBarcodeNumberDetailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productBarcodeNumberDetail"
                            android:maxLines="1"
                            android:text="@string/barcode_detail"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productBarcodeNumberDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_toEndOf="@+id/productBarcodeNumberDetailLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productQuantityDetailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productQuantityDetail"
                            android:maxLines="1"
                            android:text="@string/quantity_detail"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productQuantityDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="47dp"
                            android:layout_toEndOf="@+id/productQuantityDetailLabel"
                            android:ems="3"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/productQuantityDetail"
                            android:layout_centerVertical="true"
                            >

                            <ImageButton
                                android:id="@+id/imageButtonPlus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/add_quantity_item_detail"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_add_box_24"
                                android:background="@drawable/ic_baseline_add_box_24"/>

                            <ImageButton
                                android:id="@+id/imageButtonMinus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@+id/imageButtonPlus"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/minus_quantity_item_detail"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_indeterminate_check_box_24"
                                android:background="@drawable/ic_baseline_indeterminate_check_box_24"/>

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productUsageDetailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productUsageDetail"
                            android:maxLines="1"
                            android:text="@string/usage_detail"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productUsageDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_toEndOf="@+id/productUsageDetailLabel"
                            android:ems="3"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />

                        <Spinner
                            android:id="@+id/spinnerusagetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:entries="@array/UsageType"
                            android:layout_toEndOf="@+id/productUsageDetail" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/editItemButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="10.7dp"
                        android:layout_marginRight="62dp"
                        android:layout_marginBottom="10.7dp"
                        android:background="@drawable/blue_fill__rounded_color"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/edit_detail"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        >

        <include
            layout="@layout/navigation_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>