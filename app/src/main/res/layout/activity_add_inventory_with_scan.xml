<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addItemWithScanDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".AddInventoryWithScanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/AddItemWithScanTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/add_inventory_AddInventoryWithScan"
                    android:textColor="#C1F8B0B0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/item_image_AddInventoryWithScan"
                    android:maxWidth="300dp"
                    android:maxHeight="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="207dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productNameByScanLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productNameByScan"
                            android:maxLines="1"
                            android:text="@string/product_byScan"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productNameByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_toEndOf="@+id/productNameByScanLabel"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productManufactureByScanLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productManufactureByScan"
                            android:maxLines="1"
                            android:text="@string/manufacture_byScan"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productManufactureByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_toEndOf="@+id/productManufactureByScanLabel"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPriceByScanLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productPriceByScan"
                            android:maxLines="1"
                            android:text="@string/price_byScan"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productPriceByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="72dp"
                            android:layout_toEndOf="@+id/productPriceByScanLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productBarcodeNumberByScanLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productBarcodeNumberByScan"
                            android:maxLines="1"
                            android:text="@string/barcode_byScan"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productBarcodeNumberByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_toEndOf="@+id/productBarcodeNumberByScanLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productQuantityByScanLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productQuantityByScan"
                            android:maxLines="1"
                            android:text="@string/quantity_byScan"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productQuantityByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="47dp"
                            android:layout_toEndOf="@+id/productQuantityByScanLabel"
                            android:ems="3"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:autofillHints="2"
                            android:inputType="number" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productUsageByScanLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productUsageByScan"
                            android:maxLines="1"
                            android:text="@string/usage_byScan"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productUsageByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:layout_toEndOf="@+id/productUsageByScanLabel"
                            android:ems="3"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:autofillHints="3"
                            android:inputType="number" />

                        <Spinner
                            android:id="@+id/spinnerusagetypeByScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:entries="@array/UsageType"
                            android:layout_toEndOf="@+id/productUsageByScan" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/addItemButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="10.7dp"
                        android:layout_marginRight="62dp"
                        android:layout_marginBottom="10.7dp"
                        android:background="@drawable/blue_fill__rounded_color"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/add_item_byScan"
                        android:onClick="addItem"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        >

        <include
            layout="@layout/navigation_drawer"/>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>



