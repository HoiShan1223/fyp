<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/addNewProductDrawer"
    tools:context=".AddNewProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity ="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/new_product_Title"
                    android:textColor="#C1F8B0B0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="207dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productNameAddLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productNameAdd"
                            android:maxLines="1"
                            android:text="@string/product_AddNewProduct"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productNameAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_toEndOf="@+id/productNameAddLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:autofillHints="Product Name"
                            android:inputType="text" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productManufactureAddLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productManufactureAdd"
                            android:maxLines="1"
                            android:text="@string/manufacture_AddNewProduct"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productManufactureAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_toEndOf="@+id/productManufactureAddLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:autofillHints="Manufacture"
                            android:inputType="text" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPriceAddLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productPriceAdd"
                            android:maxLines="1"
                            android:text="@string/price_AddNewProduct"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productPriceAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="73dp"
                            android:layout_toEndOf="@+id/productPriceAddLabel"
                            android:autofillHints="price"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productBarcodeNumberAddLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productBarcodeNumberAdd"
                            android:maxLines="1"
                            android:text="@string/barcode_AddNewProduct"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productBarcodeNumberAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_toEndOf="@+id/productBarcodeNumberAddLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:autofillHints="Barcode Number"
                            android:inputType="number" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productImageURLAddLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:labelFor="@+id/productImageURLAdd"
                            android:maxLines="1"
                            android:text="@string/image_url_AddNewProduct"
                            android:textColor="#C1F8B0B0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/productImageURLAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_toEndOf="@+id/productImageURLAddLabel"
                            android:ems="10"
                            android:maxLines="1"
                            android:paddingStart="17dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="17dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:autofillHints="Image Url"
                            android:inputType="textUri" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/addnewproducttodbbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="10.7dp"
                        android:layout_marginRight="62dp"
                        android:layout_marginBottom="10.7dp"
                        android:background="@drawable/blue_fill__rounded_color"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/add_AddNewProduct"
                        android:onClick="addNewProduct"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>



